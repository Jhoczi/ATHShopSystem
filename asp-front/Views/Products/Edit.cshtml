@using Microsoft.AspNetCore.Mvc.TagHelpers
@model asp_front.Models.Product.FormProductVm;

@{
    ViewData["Title"] = "EditNewProduct";
}
<div class="mt-6">

    <h5>Edit Shop</h5>
    <form asp-controller="Products" asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id">
        <div class="form-group mb-2">
            <label asp-for="Name" for="InputProductName">Product Name</label>
            <input asp-for="Name" type="text" class="form-control" id="InputProductName" placeholder="Enter company name">
        </div>
        <div class="form-group mb-2">
            <label asp-for="Description" for="InputDescription">Product Description</label>
            <input asp-for="Description" type="text" class="form-control" id="InputProductDescription" placeholder="Enter description">
        </div>
        <div class="form-group mb-2">
            <label asp-for="Price" for="InputProductPrice">Product Price</label>
            <input asp-for="Price" class="form-control" id="InputProductPrice" placeholder="Enter price">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>

    </form>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>