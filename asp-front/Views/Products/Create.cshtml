@using Microsoft.AspNetCore.Mvc.TagHelpers
@model asp_front.Models.Product.CreateNewProductVm;

@{
    ViewData["Title"] = "CreateNewProduct";
}
<div class="mt-6">

    <h5>Create New Product</h5>
    <form asp-controller="Products" asp-action="Create" method="post">
        <div class="form-group mb-2">
            <label asp-for="Name" for="InputProductName">Product Name</label>
            <input asp-for="Name" type="text" class="form-control" id="InputProductName" placeholder="Enter Product Name">
        </div>
        <div class="form-group mb-2">
            <label asp-for="Description" for="InputProductDescription">Product Description</label>
            <input asp-for="Description" type="text" class="form-control" id="InputProductDescription" placeholder="Enter description">
        </div>
        <div class="form-group mb-2">
            <label asp-for="Price" for="InputProductPrice">Product Price</label>
            <input asp-for="Price" class="form-control" id="InputProductPrice" placeholder="Enter Price">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>

    </form>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</div>